<p>You're looking at <code>view/pages/count.ejs</code></p>
<p>You've click this button</p>
<p id="place"> <%- num %> </p>
<p>times</p>
<a class="btn btn-light" onclick="callRESTapi('/countNow')">Count now</a>
<a class="btn btn-danger" onclick="callRESTapi('/reset')">Reset</a>

<script>
    
    function callRESTapi(URLpart) {
        var xhttp;
        xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("place").innerHTML = JSON.parse(this.responseText).numrecord;
            }
        };
        xhttp.open("GET", URLpart, true);
        xhttp.send();
    }

</script>
