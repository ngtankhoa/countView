<p id="place"> <%- num %> </p>
<p>times</p>
<a class="btn btn-light" onclick="createRecord()">countNow</a>
<!-- <a class="btn btn-danger" onclick="destroyRecord()">reset</a> -->

<script>
    function createRecord() {
        var xhttp;
        xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("place").innerHTML = JSON.parse(this.responseText).numrecord;
            }
        };
        xhttp.open("GET", "/countNow", true);
        xhttp.send();
    }

    // function destroyRecord(){
